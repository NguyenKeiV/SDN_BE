<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title || 'Quiz List' %></title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container">
        <a class="navbar-brand" href="/">
          <i class="bi bi-journal-check"></i> Quiz Management
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link active" href="/quizzes">
                <i class="bi bi-list-check"></i> Quizzes
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/questions">
                <i class="bi bi-question-circle"></i> Questions
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <main class="container my-4">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-list-check"></i> Quiz List</h1>
        <a href="/quizzes/create" class="btn btn-primary">
          <i class="bi bi-plus-circle"></i> Create New Quiz
        </a>
      </div>

      <% if (quizzes && quizzes.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-hover table-bordered">
          <thead class="table-primary">
            <tr>
              <th style="width: 5%">#</th>
              <th style="width: 25%">Title</th>
              <th style="width: 40%">Description</th>
              <th style="width: 10%">Questions</th>
              <th style="width: 20%">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% quizzes.forEach((quiz, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= quiz.title %></td>
              <td><%= quiz.description %></td>
              <td class="text-center">
                <span class="badge bg-info"
                  ><%= quiz.questions ? quiz.questions.length : 0 %></span
                >
              </td>
              <td>
                <div class="btn-group" role="group">
                  <a
                    href="/quizzes/<%= quiz._id %>"
                    class="btn btn-sm btn-info"
                    title="View"
                  >
                    <i class="bi bi-eye"></i>
                  </a>
                  <a
                    href="/quizzes/<%= quiz._id %>/edit"
                    class="btn btn-sm btn-warning"
                    title="Edit"
                  >
                    <i class="bi bi-pencil"></i>
                  </a>
                  <form
                    action="/quizzes/<%= quiz._id %>?_method=DELETE"
                    method="POST"
                    style="display: inline"
                    onsubmit="return confirm('Are you sure you want to delete this quiz?');"
                  >
                    <button
                      type="submit"
                      class="btn btn-sm btn-danger"
                      title="Delete"
                    >
                      <i class="bi bi-trash"></i>
                    </button>
                  </form>
                </div>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <% } else { %>
      <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> No quizzes found.
        <a href="/quizzes/create">Create one now</a>!
      </div>
      <% } %>
    </main>

    <footer class="bg-light text-center text-muted py-3 mt-5">
      <div class="container">
        <p class="mb-0">
          &copy; 2024 Quiz Management Application. All rights reserved.
        </p>
      </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
  </body>
</html>
