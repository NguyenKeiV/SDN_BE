<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title || 'Add Questions to Quiz' %></title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container">
        <a class="navbar-brand" href="/">
          <i class="bi bi-journal-check"></i> Quiz Management
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link active" href="/quizzes">
                <i class="bi bi-list-check"></i> Quizzes
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/questions">
                <i class="bi bi-question-circle"></i> Questions
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <main class="container my-4">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <h4 class="mb-0">Add Questions to: <%= quiz.title %></h4>
              <p class="text-muted mb-0 mt-2">
                <i class="bi bi-info-circle"></i>
                Select questions from the list below to add to your quiz
              </p>
            </div>
            <div class="card-body">
              <% if (questions && questions.length > 0) { %>
              <form
                action="/quizzes/<%= quiz._id %>/add-questions"
                method="POST"
                id="addQuestionsForm"
              >
                <div
                  class="mb-3 d-flex justify-content-between align-items-center"
                >
                  <div>
                    <button
                      type="button"
                      class="btn btn-sm btn-outline-secondary"
                      id="selectAllBtn"
                    >
                      <i class="bi bi-check-square"></i> Select All
                    </button>
                    <button
                      type="button"
                      class="btn btn-sm btn-outline-secondary"
                      id="deselectAllBtn"
                    >
                      <i class="bi bi-square"></i> Deselect All
                    </button>
                    <span class="ms-3 text-muted">
                      <span id="selectedCount">0</span> question(s) selected
                    </span>
                  </div>
                  <div>
                    <a
                      href="/quizzes/<%= quiz._id %>"
                      class="btn btn-secondary"
                    >
                      <i class="bi bi-x-circle"></i> Cancel
                    </a>
                    <button
                      type="submit"
                      class="btn btn-primary"
                      id="submitBtn"
                      disabled
                    >
                      <i class="bi bi-plus-circle"></i> Add Selected Questions
                    </button>
                  </div>
                </div>

                <div class="list-group">
                  <% questions.forEach((question, index) => { %>
                  <label
                    class="list-group-item list-group-item-action"
                    style="cursor: pointer"
                  >
                    <div class="d-flex align-items-start">
                      <input
                        type="checkbox"
                        name="questionIds"
                        value="<%= question._id %>"
                        class="form-check-input me-3 mt-1 question-checkbox"
                        id="question-<%= question._id %>"
                      />
                      <div class="flex-grow-1">
                        <h6 class="mb-2">
                          <span class="badge bg-secondary me-2"
                            ><%= index + 1 %></span
                          >
                          <%= question.text %>
                        </h6>

                        <% if (question.options && question.options.length > 0)
                        { %>
                        <ul class="list-unstyled mb-2 ms-3">
                          <% question.options.forEach((option, optIndex) => { %>
                          <li
                            class="small <%= optIndex === question.correctAnswerIndex ? 'text-success fw-bold' : 'text-muted' %>"
                          >
                            <%= String.fromCharCode(65 + optIndex) %>. <%=
                            option %> <% if (optIndex ===
                            question.correctAnswerIndex) { %>
                            <i class="bi bi-check-circle-fill text-success"></i>
                            <% } %>
                          </li>
                          <% }); %>
                        </ul>
                        <% } %> <% if (question.keywords &&
                        question.keywords.length > 0) { %>
                        <div class="mt-2">
                          <% question.keywords.forEach(keyword => { %>
                          <span class="badge bg-info text-dark me-1 small"
                            ><%= keyword %></span
                          >
                          <% }); %>
                        </div>
                        <% } %>
                      </div>
                    </div>
                  </label>
                  <% }); %>
                </div>

                <div class="mt-3 d-flex justify-content-between">
                  <a href="/quizzes/<%= quiz._id %>" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Quiz
                  </a>
                  <button
                    type="submit"
                    class="btn btn-primary"
                    id="submitBtnBottom"
                    disabled
                  >
                    <i class="bi bi-plus-circle"></i> Add Selected Questions
                  </button>
                </div>
              </form>
              <% } else { %>
              <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i>
                No available questions to add. All questions have been added to
                this quiz or no questions exist.
              </div>
              <a href="/questions/create" class="btn btn-primary me-2">
                <i class="bi bi-plus-circle"></i> Create New Question
              </a>
              <a href="/quizzes/<%= quiz._id %>" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Quiz
              </a>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </main>

    <footer class="bg-light text-center text-muted py-3 mt-5">
      <div class="container">
        <p class="mb-0">
          &copy; 2024 Quiz Management Application. All rights reserved.
        </p>
      </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const checkboxes = document.querySelectorAll(".question-checkbox");
        const selectedCount = document.getElementById("selectedCount");
        const submitBtn = document.getElementById("submitBtn");
        const submitBtnBottom = document.getElementById("submitBtnBottom");
        const selectAllBtn = document.getElementById("selectAllBtn");
        const deselectAllBtn = document.getElementById("deselectAllBtn");
        const form = document.getElementById("addQuestionsForm");

        function updateCount() {
          const checked = document.querySelectorAll(
            ".question-checkbox:checked"
          ).length;
          selectedCount.textContent = checked;

          if (submitBtn) submitBtn.disabled = checked === 0;
          if (submitBtnBottom) submitBtnBottom.disabled = checked === 0;
        }

        checkboxes.forEach((checkbox) => {
          checkbox.addEventListener("change", updateCount);
        });

        if (selectAllBtn) {
          selectAllBtn.addEventListener("click", function () {
            checkboxes.forEach((cb) => (cb.checked = true));
            updateCount();
          });
        }

        if (deselectAllBtn) {
          deselectAllBtn.addEventListener("click", function () {
            checkboxes.forEach((cb) => (cb.checked = false));
            updateCount();
          });
        }

        if (form) {
          form.addEventListener("submit", function (e) {
            const checked = document.querySelectorAll(
              ".question-checkbox:checked"
            ).length;
            if (checked === 0) {
              e.preventDefault();
              alert("Please select at least one question to add.");
              return false;
            }
          });
        }

        updateCount();
      });
    </script>
  </body>
</html>
