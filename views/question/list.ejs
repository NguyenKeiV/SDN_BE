<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title || 'Question List' %></title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container">
        <a class="navbar-brand" href="/">
          <i class="bi bi-journal-check"></i> Quiz Management
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="/quizzes">
                <i class="bi bi-list-check"></i> Quizzes
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/questions">
                <i class="bi bi-question-circle"></i> Questions
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <main class="container my-4">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-question-circle"></i> Question List</h1>
        <a href="/questions/create" class="btn btn-primary">
          <i class="bi bi-plus-circle"></i> Create New Question
        </a>
      </div>

      <% if (questions && questions.length > 0) { %>
      <div class="row">
        <% questions.forEach((question, index) => { %>
        <div class="col-md-6 mb-3">
          <div class="card shadow-sm h-100">
            <div
              class="card-header bg-light d-flex justify-content-between align-items-center"
            >
              <strong>Question <%= index + 1 %></strong>
              <div>
                <% if (question.keywords && question.keywords.length > 0) { %>
                <% question.keywords.forEach(keyword => { %>
                <span class="badge bg-info"><%= keyword %></span>
                <% }); %> <% } %>
              </div>
            </div>
            <div class="card-body">
              <h6 class="card-title"><%= question.text %></h6>
              <ul class="list-group list-group-flush mb-3">
                <% question.options.forEach((option, optIndex) => { %>
                <li
                  class="list-group-item <%= optIndex === question.correctAnswerIndex ? 'list-group-item-success' : '' %>"
                >
                  <%= option %> <% if (optIndex === question.correctAnswerIndex)
                  { %>
                  <i class="bi bi-check-circle-fill text-success float-end"></i>
                  <% } %>
                </li>
                <% }); %>
              </ul>
            </div>
            <div class="card-footer bg-white">
              <div class="btn-group w-100" role="group">
                <a
                  href="/questions/<%= question._id %>"
                  class="btn btn-sm btn-info"
                >
                  <i class="bi bi-eye"></i> View
                </a>
                <a
                  href="/questions/<%= question._id %>/edit"
                  class="btn btn-sm btn-warning"
                >
                  <i class="bi bi-pencil"></i> Edit
                </a>
                <form
                  action="/questions/<%= question._id %>?_method=DELETE"
                  method="POST"
                  style="display: inline; flex: 1"
                  onsubmit="return confirm('Are you sure you want to delete this question?');"
                >
                  <button type="submit" class="btn btn-sm btn-danger w-100">
                    <i class="bi bi-trash"></i> Delete
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
      <% } else { %>
      <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> No questions found.
        <a href="/questions/create">Create one now</a>!
      </div>
      <% } %>
    </main>

    <footer class="bg-light text-center text-muted py-3 mt-5">
      <div class="container">
        <p class="mb-0">
          &copy; 2024 Quiz Management Application. All rights reserved.
        </p>
      </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
  </body>
</html>
