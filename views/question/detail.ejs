<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title || 'Question Detail' %></title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container">
        <a class="navbar-brand" href="/">
          <i class="bi bi-journal-check"></i> Quiz Management
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="/quizzes">
                <i class="bi bi-list-check"></i> Quizzes
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/questions">
                <i class="bi bi-question-circle"></i> Questions
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <main class="container my-4">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card shadow">
            <div
              class="card-header bg-info text-white d-flex justify-content-between align-items-center"
            >
              <h3 class="mb-0"><i class="bi bi-eye"></i> Question Details</h3>
              <div>
                <a
                  href="/questions/<%= question._id %>/edit"
                  class="btn btn-warning btn-sm"
                >
                  <i class="bi bi-pencil"></i> Edit
                </a>
                <a href="/questions" class="btn btn-secondary btn-sm">
                  <i class="bi bi-arrow-left"></i> Back
                </a>
              </div>
            </div>
            <div class="card-body">
              <div class="mb-4">
                <h5 class="text-muted">Question:</h5>
                <p class="fs-5"><%= question.text %></p>
              </div>

              <div class="mb-4">
                <h5 class="text-muted">Answer Options:</h5>
                <div class="list-group">
                  <% question.options.forEach((option, index) => { %>
                  <div
                    class="list-group-item <%= index === question.correctAnswerIndex ? 'list-group-item-success' : '' %>"
                  >
                    <div
                      class="d-flex justify-content-between align-items-center"
                    >
                      <span>
                        <strong><%= String.fromCharCode(65 + index) %>.</strong>
                        <%= option %>
                      </span>
                      <% if (index === question.correctAnswerIndex) { %>
                      <span class="badge bg-success">
                        <i class="bi bi-check-circle-fill"></i> Correct Answer
                      </span>
                      <% } %>
                    </div>
                  </div>
                  <% }); %>
                </div>
              </div>

              <% if (question.keywords && question.keywords.length > 0) { %>
              <div class="mb-3">
                <h5 class="text-muted">Keywords:</h5>
                <div>
                  <% question.keywords.forEach(keyword => { %>
                  <span class="badge bg-info me-1"><%= keyword %></span>
                  <% }); %>
                </div>
              </div>
              <% } %>

              <div class="alert alert-light">
                <small class="text-muted">
                  <strong>ID:</strong> <%= question._id %>
                </small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <footer class="bg-light text-center text-muted py-3 mt-5">
      <div class="container">
        <p class="mb-0">
          &copy; 2024 Quiz Management Application. All rights reserved.
        </p>
      </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
  </body>
</html>
